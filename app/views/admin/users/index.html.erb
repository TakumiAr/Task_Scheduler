<p><%= notice %></p>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Created_at</th>
    <th></th>
    <th></th>
    <th><%= link_to "作成", new_admin_user_path, class: "btn btn-outline-dark" %></th>

  </tr>

<% @users.each do |user| %>
  <tr class="Task_content">
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.created_at %></td>
    <td class="show"><%= link_to t('view.show'), admin_user_path(user.id), class: "btn btn-outline-primary" %></td>
    <td class="edit"><%= link_to t('view.edit'), edit_admin_user_path(user.id), class: "btn btn-outline-info" %></td>
    <td class="delete"><%= link_to t('view.delete'), admin_user_path(user.id), method: :delete, class: "btn btn-outline-danger", data: { confirm: t('view.confirm_delete') } %></td>
  </tr>
<% end %>
</table>