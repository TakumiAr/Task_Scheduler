<h1>Sign up</h1>
<br>
<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br><br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br><br>
  <%= f.label :admin %>
  <%= f.check_box :admin, {} , true, false %>
  <br><br>
  <%= f.submit "Create my account" %>
  <br><br>
<% end %>