<p><%= notice %></p>
<table class="table table-hover">
  <tr>
    <th><%= t('view.title') %></th>
    <th><%= t('view.content') %></th>
    <th><%= t('view.deadline') %></th>
    <th><%= t('view.status') %></th>
    <th><%= t('view.priority') %></th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="Task_content">
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td class="show"><button type="button" class="btn btn-outline-primary"><%= link_to t('view.show'), task_path(task.id) %></buttom></td>
    <td class="edit"><button type="button" class="btn btn-outline-primary"><%= link_to t('view.edit'), edit_task_path(task.id) %></button></td>
    <td class="delete"><button type="button" class="btn btn-outline-primary"><%= link_to t('view.delete'), task_path(task.id), method: :delete ,data: { confirm: t('view.confirm_delete') } %></button></td>
  </tr>
<% end %>
</table>
<a class="paginate_tasks"><%= paginate @tasks %></a>